@page "{id:int}"
@model BaseProject.Pages.Issues.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Issue</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Issue.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Issue.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Issue.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Issue.Status)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Issue.Assignee)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Issue.Assignee.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Issue.Tasks)
            <a asp-page="../IssueTasks/Create"><i class="glyphicon-plus"></i></a>
        </dt>
        <dd>
            <table class="table">
                @if (!Model.Issue.Tasks.Any())
                {
                    <tr>
                        <td>
                            None
                        </td>
                    </tr>
                }
                @foreach (var item in Model.Issue.Tasks)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Issue.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
