
@model IEnumerable<Spa2.Models.ServiceProvider>

@{
    ViewData["Title"] = "Services";
}

<h2>Service Providers</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceProviderId)
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceProviderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { ServiceProviderId = item.ServiceProviderId }) |
                @Html.ActionLink("Appointments", "AppointmentIndex", new { ServiceProviderId = item.ServiceProviderId })
            </td>
        </tr>
        }
    </tbody>
</table>


