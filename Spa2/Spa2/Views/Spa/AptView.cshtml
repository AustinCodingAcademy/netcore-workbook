@model Spa2.Models.Appointment

@{
    ViewData["Title"] = "AptView";
}

<h2>Select Appointment Time</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AptView">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                @*<input asp-for="Id" class="form-control" />*@
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="AptTime" class="control-label"></label>
                <input asp-for="@Model.AptTime" class="form-control" />
                <span asp-validation-for="AptTime" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="@Model.Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<br />

<div>
    <a asp-action="CustomerName">Back to Cusotmer</a>
</div>

